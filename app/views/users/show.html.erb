<p id="notice"><%= notice %></p>

<h1>User: <%= @user.name %></h1>

<% @user.posts.each do |post| %>
  <h2> <%= link_to post.title, post %></h2>
  <% if post.image.present? %>
    <p><%= image_tag post.image, style: "width: 300px; display: block" %></p>
  <% end %>
  <p><%= post.body.truncate(100) %></p>
<% end %>
